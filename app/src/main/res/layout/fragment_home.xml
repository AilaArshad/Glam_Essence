<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/search_product"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_border"
            android:drawableStart="@drawable/search_product"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:hint="Search Glam Essence"
            android:textColorHint="@color/black"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!-- Auto-sliding Banner -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/bannerViewPager"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="12dp" />

        <!-- What's New -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="What's New"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/viewAllNew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- What's New Recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/whatsNewRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false" />

        <!-- Promo Banner Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/lipstick08" />

            <LinearLayout
                android:id="@+id/bannerColorSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#A0D6B4"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/bannerTextTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOVAGE+ SERUMS UP TO 40% OFF"
                    android:textColor="#333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bannerTextBottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find your hero serum"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/bannerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TAKE YOUR PICK"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rounded_button" />
            </LinearLayout>
        </LinearLayout>

        <!-- Best Offers Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Best Offers"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/viewAllOffers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Best Offers Recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bestOffersRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false" />

        <!-- Glow Up Motivation Section -->
        <TextView
            android:id="@+id/sectionTitleGlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:text="Unleash Your Inner Glow"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/sectionSubTextGlow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Discover the radiance within you. From skincare to beauty essentials, find everything that empowers your confidence and reflects your inner light."
            android:textSize="15sp"
            android:textColor="#666666"
            android:textAlignment="center" />

        <!-- Image + Shop Now Button -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/glowBannerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/lipstick08" />

            <Button
                android:id="@+id/shopNowGlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Now"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center|bottom"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button" />
        </FrameLayout>

        <!-- Recommended Products Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recommended for You"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/viewAllRecommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Recommended Products Recycler -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recommendedProductsRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:elevation="0dp"
    android:padding="8dp">

    <!-- Product Image Frame -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <!-- Product Image Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp" >
        <!-- âœ… remove shadow -->

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/nutri15" />
    </androidx.cardview.widget.CardView>


    <!-- "NEW" Tag -->
        <TextView
            android:id="@+id/newTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW"
            android:fontFamily="@font/mregular"
            android:layout_gravity="top|start"
            android:layout_margin="6dp"
            android:padding="4dp"
            android:textColor="@android:color/black"
            android:background="@android:color/white" />

        <!-- Heart & Cart Icons -->
        <!-- Heart & Cart LinearLayout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:elevation="8dp">
            <!-- Heart Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/fav_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:src="@drawable/heart_outlined"
                    android:contentDescription="Favorite" />
            </androidx.cardview.widget.CardView>

            <!-- Cart Icon -->
            <androidx.cardview.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="15dp"
                android:layout_gravity="end"
                android:backgroundTint="@android:color/white"
                app:cardElevation="2dp">

                <ImageView
                    android:id="@+id/cart_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Cart"
                    android:scaleType="centerInside"
                    android:src="@drawable/cart" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>

    <!-- Rating -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"
            android:rating="0.0" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="(0)"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Brand Name -->
    <TextView
        android:id="@+id/brandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brand Name"
        android:fontFamily="@font/mregular"
        android:textSize="13sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:fontFamily="@font/robotosemi"
        android:textSize="14sp"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Price -->
    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKR 0.0"
        android:fontFamily="@font/notoreg"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_marginTop="4dp" />

</LinearLayout>

                    android:layout_height="1dp"
                    android:background="#DED8D8" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="12dp"
                    android:text="Add Item"
                    android:textColor="#000000"
                    android:textSize="16sp" />


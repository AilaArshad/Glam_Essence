<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:elevation="6dp"
    android:background="@drawable/rounded_top_corners"
    android:clipToPadding="false"
    android:clipChildren="false">

    <TextView
        android:id="@+id/removeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Remove product(s) from basket"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/removeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Do you really want to remove product(s) from basket?"
        android:textSize="14sp"
        android:textColor="#555555"
        android:layout_marginBottom="16dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yesRemoveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yes, Remove"
        android:backgroundTint="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button_red"/>

    <TextView
        android:id="@+id/cancelRemoveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>
